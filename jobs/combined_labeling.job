V=2
ONTOLOGY_PATH="data/ontology/v${V}/"


TOKEN_POOLING="none"
MENTION_POOLING="none"
COS_THETA=0.9
RUN_NAME="$DATE/T|${TOKEN_POOLING}|_M|${MENTION_POOLING}|";

