--selection 0 500 \
--output_path "data/DistantlySupervisedDatasets/ontology_v$V/$RUN_NAME/train/" \
--timestamp_given \
--label_strategy $LABELING_STRATEGY \
--cos_theta $COS_THETA \
--filter_sentences \
--ontology_path $ONTOLOGY_PATH \
--token_pooling ${TOKEN_POOLING} \
--mention_pooling ${MENTION_POOLING}

