#!/bin/bash
#SBATCH --job-name=distantly_supervised_dataset
#SBATCH --time=4:00:00
#SBATCH --nodes=1
#SBATCH --cpus-per-task=16
#SBATCH --ntasks-per-node=1
#SBATCH --mem=16G
#SBATCH --mail-type=END
#SBATCH --mail-user=ragger.jonkers@student.uva.nl

module purge
module load 2019
module load CUDA/10.1.243
module load Anaconda3/2018.12

source activate lisaenv

cp -r $HOME/distantly-supervised-dataset/ $TMPDIR
cd $TMPDIR/distantly-supervised-dataset

RUN_NAME="`date +%d_%m_%Y_%H_%M_%S`";
python DistantlySupervisedDataset.py --document_path "data/ScientificDocuments/" --selection 200 300 --output_path "data/DistantlySupervisedDatasets/test/" >> outputs_test_${RUN_NAME}.txt
python DistantlySupervisedDataset.py --document_path "data/ScientificDocuments/" --selection 0 200 --output_path "data/DistantlySupervisedDatasets/train/" >> outputs_train_${RUN_NAME}.txt

cp -r data/DistantlySupervisedDatasets/ $HOME/distantly-supervised-dataset/data/
cp outputs_test_${RUN_NAME}.txt $HOME/distantly-supervised-dataset/data/DistantlySupervisedDatasets/
cp outputs_train_${RUN_NAME}.txt $HOME/distantly-supervised-dataset/data/DistantlySupervisedDatasets/
